@import url("https://fonts.googleapis.com/css?family=Roboto:400,500,700&display=swap&subset=cyrillic");

body
    font-family: 'Roboto', sans-serif
    font-size: 15px
    background-color: #f0f0f0
    padding: 15px 0

.container
    width: 1060px
    margin: 0 auto
    background: #fff
    padding: 30px 0

.content 
    width: 680px
    margin: 0 auto

h1
    font-weight: 500
    font-size: 36px
    line-height: 1.3em

.article
    font-size: 18px
    width: 680px
    margin: 0 auto
    margin-bottom 40px
    line-height: 28px
    p
        margin: 15px 0
    &__date
        color: #818181
        font-size: 15px

.flex
    display: flex

.flex-center
    align-items: center

.flex-push
    flex: 1 1 100%;

.ml-40
    margin-left 40px
.mr-20
    margin-right 20px

.no-wrap
    white-space: nowrap

.comments
    &__item
        margin-bottom 25px
        &__content
            flex: 1 1 100%
        &__name
            font-weight: bold
        &__avatar
           border-radius: 5px
           margin-right 15px
           overflow hidden
           font-size: 0
           height: 64px
           flex: 0 0 64px
        &__top-bar
            display: flex
            margin-bottom 7px
        &__date
            color: #818181

        &__vote
            &__action
                padding: 0 7px
                cursor pointer
                line-height: 20px
            &__rating
                padding: 0 12px
                color: #07a23b
                font-size: 14px
                line-height: 20px
                font-weight: bold
                background-color: #eefbf3
                &.bad
                    background-color: #fff1f1
                    color: #cd192e
    